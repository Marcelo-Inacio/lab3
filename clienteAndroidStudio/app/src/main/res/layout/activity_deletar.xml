<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E0FFFF"
    tools:context="com.marcelo.parking.DeletarActivity">

    <EditText
        android:layout_width="275dp"          android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/txtBuscarDeletar"
        android:hint="Insira uma Placa ex.: aaa-1234" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBuscarPlacaExcluir"
        android:onClick="btnSearchExcluir"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/search_icon50dp" />

    <TextView
        android:layout_width="wrap_content"     android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView01"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtBuscarDeletar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Proprietario" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView02"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView01"
        android:layout_alignParentLeft="true"
        android:hint="Placa" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView03"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView02"
        android:layout_alignParentLeft="true"
        android:hint="Modelo" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView04"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView03"
        android:layout_alignParentLeft="true"
        android:hint="Cor" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView05"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView04"
        android:layout_alignParentLeft="true"
        android:hint="Data" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView06"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView05"
        android:layout_alignParentLeft="true"
        android:hint="Hora" />




    <TextView
        android:id="@+id/textViewDeletar"
        android:text="     "
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/btnDeletar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"    android:layout_height="80dp"
        android:text="DELETAR"
        android:id="@+id/btnDeletar"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:onClick="btnExcluir"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />



</RelativeLayout>
