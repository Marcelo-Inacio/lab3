<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E0FFFF"
    tools:context="com.marcelo.parking.AlterarActivity">

    <EditText
        android:layout_width="300dp"          android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="00dp"
        android:id="@+id/edit001"
        android:hint="Novo-Proprietario"
        android:textColor="#4682B4" />

    <EditText
        android:layout_width="150dp"         android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/edit002"
        android:hint="Nova-Placa" />

    <EditText
        android:layout_width="300dp"         android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/edit003"
        android:hint="Novo-Modelo" />

    <EditText
        android:layout_width="300dp"         android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:id="@+id/edit004"
        android:hint="Nova-Cor" />

    <EditText
        android:layout_width="150dp"         android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp"
        android:id="@+id/edit005"
        android:hint="Placa Alterar" />


    <Button
        android:layout_width="180dp"    android:layout_height="80dp"
        android:text="ALTERAR"
        android:id="@+id/btnEnviar"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:onClick="btnAlterar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />



    <TextView
        android:id="@+id/textViewAlterar"
        android:text="     "
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:textSize="20dp"
        android:layout_below="@+id/btnSearch"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnSearch"
        android:src="@drawable/search_icon50dp"
        android:onClick="btnSearchSign"
        android:layout_below="@+id/edit004"
        android:layout_alignRight="@+id/edit004"
        android:layout_alignEnd="@+id/edit004" />

</RelativeLayout>
