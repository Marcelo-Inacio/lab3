<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lab3.marcelo.myparking.BuscarActivity">

    <EditText
        android:layout_width="275dp"          android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/editTxtBuscarPlacaEntrada"
        android:hint="Insira uma Placa ex.: aaa-1234" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BUSCAR"
        android:id="@+id/textAdd"
        android:textSize="40dp"
        android:textColor="#4682B4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnBuscarPlaca"
        android:onClick="btnBuscarPlaca"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/search_icon50dp" />

    <TextView
        android:layout_width="wrap_content"     android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarProprietario"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editTxtBuscarPlacaEntrada"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Proprietario" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarPlaca"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBuscarProprietario"
        android:layout_alignParentLeft="true"
        android:hint="Placa" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarModelo"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBuscarPlaca"
        android:layout_alignParentLeft="true"
        android:hint="Modelo" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarCor"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBuscarModelo"
        android:layout_alignParentLeft="true"
        android:hint="Cor" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarData"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBuscarCor"
        android:layout_alignParentLeft="true"
        android:hint="Data" />

    <TextView
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewBuscarHora"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBuscarData"
        android:layout_alignParentLeft="true"
        android:hint="Hora" />

</RelativeLayout>
